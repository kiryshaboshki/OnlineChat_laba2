<Window x:Class="ChatClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <TabControl x:Name="TabControl" Background="White" BorderBrush="#E0E0E0" SelectionChanged="TabControl_SelectionChanged">

            <!-- Вкладка ВХОД -->
            <TabItem Header="Вход">
                <StackPanel Margin="10">
                    <TextBlock Text="Имя пользователя:" Foreground="#333333"/>
                    <TextBox x:Name="LoginUsername" 
                             Text="{Binding LoginUsername, UpdateSourceTrigger=PropertyChanged}"
                             Background="White" BorderBrush="#CCCCCC"/>

                    <TextBlock Text="Пароль:" Foreground="#333333" Margin="0,15,0,0"/>
                    <PasswordBox x:Name="LoginPassword" 
                                 Background="White" 
                                 BorderBrush="#CCCCCC"/>

                    <Button Content="Войти" 
                            Command="{Binding LoginCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,20,0,0"/>

                    <Border Background="#FFEBEE" 
                            CornerRadius="5" 
                            Margin="10,10,10,0"
                            Padding="10">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasLoginError}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock x:Name="LoginError" 
                                   Foreground="#D32F2F" 
                                   Text="{Binding LoginError}"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </TabItem>

            <!-- Вкладка РЕГИСТРАЦИЯ -->
            <TabItem Header="Регистрация">
                <StackPanel Margin="10">
                    <TextBlock Text="Имя пользователя:" Foreground="#333333"/>
                    <TextBox x:Name="RegisterUsername" 
                             Text="{Binding RegisterUsername, UpdateSourceTrigger=PropertyChanged}"
                             Background="White" BorderBrush="#CCCCCC"/>

                    <TextBlock Text="Пароль:" Foreground="#333333" Margin="0,15,0,0"/>
                    <PasswordBox x:Name="RegisterPassword" 
                                 Background="White" 
                                 BorderBrush="#CCCCCC"/>

                    <TextBlock Text="Подтверждение пароля:" Foreground="#333333" Margin="0,15,0,0"/>
                    <PasswordBox x:Name="RegisterConfirmPassword" 
                                 Background="White" 
                                 BorderBrush="#CCCCCC"/>

                    <Button Content="Зарегистрироваться" 
                            Command="{Binding RegisterCommand}"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,20,0,0"/>

                    <Border Background="#FFEBEE" 
                            CornerRadius="5" 
                            Margin="10,10,10,0"
                            Padding="10">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasRegisterError}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock x:Name="RegisterError" 
                                   Foreground="#D32F2F" 
                                   Text="{Binding RegisterError}"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>